<?xml version="1.0" encoding="UTF-8"?>

<phpunit>
    <php>
        <ini name="memory_limit" value="2G"/>
    </php>
    <filter>
        <whitelist>
            <directory suffix=".php">./</directory>
            <exclude>
                <directory>vendor/</directory>
                <directory>test/</directory>
                <directory>src/Rcm/Exception/</directory>
                <directory>src/Rcm/Http/</directory>
                <file>src/Rcm/Plugin/PluginInterface.php</file>
            </exclude>
        </whitelist>
    </filter>
    <testsuites>
        <testsuite name="rcm">
            <directory>test</directory>
        </testsuite>
    </testsuites>
</phpunit>
